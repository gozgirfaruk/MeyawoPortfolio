@using MeyawoPortfolio.Models
@model List<TBLCONTACT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gelen Kutusu</h2>

<table class="table table-bordered">
    <tr>

        <th>Gönderen Adı</th>
        <th>Mesajı</th>
        <th>Okundu/Okunmadı</th>
        <th>Sil</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.NameSurname</td>
            <td>@item.Message </td>
            @if (item.IsRead == true)
            {
                <td><input type="checkbox" checked /></td>
            }
            else
            {
                <td><input type="checkbox" /></td>
            }
      
            <td><a href="/Contact/Delete/@item.ContactID" class="btn btn-outline-primary">Sil</a></td>
        </tr>
    }
</table>






